    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch HTTP server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "main.go",
            "args": ["server"]
        },
        {
            "name": "Import data",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "main.go",
            "args": ["import", "./data/backup"]
        },
        {
            "name": "Generate sitemap",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "main.go",
            "args": [
                "sitemap",
                "https://www.destructuring-bind.org/gps-routes/"
            ]
        },
        {
            "name": "Ping Database",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "main.go",
            "args": ["ping"]
        },
        {
            "name": "Run Migrations [UP]",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "main.go",
            "args": ["migration", "up", "db/migrations"]
        },
        {
            "name": "Run Migrations [DOWN]",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "main.go",
            "args": ["migration", "down", "db/migrations"]
        }
    ]
}
